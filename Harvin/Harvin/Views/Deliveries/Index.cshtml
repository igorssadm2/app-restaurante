@model IEnumerable<Harvin.Models.Delivery>

@{
    ViewBag.Title = "Index";
}

<h2>Pedidos Delivery</h2>

<p>
    @Html.ActionLink("Criar novo Pedido", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Pagamento)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Pagamento)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id }) |
            @Html.ActionLink("Finalizar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
